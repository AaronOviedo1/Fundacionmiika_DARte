# DARte - Variables de Entorno

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_ENDPOINT=https://api.darte.mx

# Email Configuration (EmailJS)
VITE_EMAILJS_SERVICE_ID=service_xxxxxxxxx
VITE_EMAILJS_TEMPLATE_ID=template_xxxxxxxxx
VITE_EMAILJS_PUBLIC_KEY=your_public_key_here

# Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
VITE_VERCEL_ANALYTICS_ID=your_id_here

# Environment
VITE_ENV=development
# development | staging | production

# Museum Contact Information
VITE_PHONE=+52-662-123-4567
VITE_EMAIL=info@darte.mx
VITE_ADDRESS=Angela Peralta 35, Col. Periodista, Hermosillo, Sonora

# Social Media
VITE_INSTAGRAM=@darte.mx
VITE_FACEBOOK=darte.museo
VITE_YOUTUBE=@darte

# Configuraci√≥n Avanzada
VITE_ENABLE_BLOG=true
VITE_ENABLE_RESERVATIONS=true
VITE_ENABLE_DONATIONS=false

# API Keys para Servicios
VITE_MAPS_API_KEY=your_google_maps_api_key
